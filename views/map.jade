        // obtain the layer position depending of the position
        function layerPosition(id) {
            var position = 0;
            for (var i = 0; i < vehiclesJSON.length; i++) {
                if (vehiclesJSON[i].id_vehicle == id) {
                    position = i + 2;
                }
            }
            return position;
