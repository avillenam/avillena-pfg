        function createLayerById(id) {
            console.log('createLayerById: ' + id);
            var peticionGet = "";
            peticionGet = 'position-vehicle/' + id;

            console.log('Id: ' + id);
            console.log('Id type: ' + typeof (id));

            // TODO: add styleFunction
            var stylePoint = new ol.style.Style({
                stroke: new ol.style.Stroke({
