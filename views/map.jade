        // *******DIJKTRA***********
        // Dijkstra
        var dijkstra = new ol.graph.Dijskra({
            source: graph
        });
        // Start processing
        dijkstra.on('start', function (e) {
            $('#warning').hide();
            $("#notfound").hide();
            $("#notfound0").hide();
            $("#result").hide();
            result.clear();
        });
        // Finish > show the route
        dijkstra.on('finish', function (e) {
            $('#warning').hide();
            result.clear();
            console.log(e);
            if (!e.route.length) {
                if (e.wDistance === -1) $("#notfound0").show();
                else $("#notfound").show();
                $("#result").hide();
            } else {
                $("#result").show();
